<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="tabLayoutIndicator">@color/colorPrimary</item>
    </style>

    <style name="CustomButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_selector_state</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/subtitle_font_size</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingLeft">@dimen/module_medium</item>
        <item name="android:paddingRight">@dimen/module_medium</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
